# =============================================================================
# Catalyst Trading System - International
# Environment Configuration
# =============================================================================
# Copy to .env and fill in your values
# Last Updated: 2025-12-20

# =============================================================================
# CLAUDE API (required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxx

# =============================================================================
# DATABASE - DigitalOcean Managed PostgreSQL
# =============================================================================
DATABASE_URL=postgresql://user:password@host:25060/defaultdb?sslmode=require
DB_HOST=your-db-cluster.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=defaultdb
DB_USER=doadmin
DB_PASSWORD=your-db-password

# =============================================================================
# BROKER - Moomoo/Futu via OpenD (Primary - Dec 2025+)
# =============================================================================
# OpenD gateway configuration (runs in /root/opend/)
FUTU_HOST=127.0.0.1
FUTU_PORT=11111
FUTU_TRADE_PWD=your_trade_unlock_password

# OpenD container credentials (set in /root/opend/.env)
# FUTU_USER=your_moomoo_account_id
# FUTU_PWD=your_password

# =============================================================================
# BROKER - Interactive Brokers (Deprecated - kept for reference)
# =============================================================================
# IBKR_HOST=127.0.0.1
# IBKR_PORT=4000          # IBGA external port
# IBKR_CLIENT_ID=1

# =============================================================================
# EMAIL ALERTS (optional)
# =============================================================================
ALERT_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# WEBHOOK ALERTS (optional - Discord or Slack)
# =============================================================================
ALERT_WEBHOOK=https://discord.com/api/webhooks/xxx

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=paper       # paper or live
LOG_LEVEL=INFO

# =============================================================================
# CLAUDE MODELS (optional - defaults are fine)
# =============================================================================
# TACTICAL_MODEL=claude-sonnet-4-20250514
# ANALYTICAL_MODEL=claude-sonnet-4-20250514
# STRATEGIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# TRADING PARAMETERS (optional - defaults are fine)
# =============================================================================
# MAX_POSITIONS=5
# MAX_POSITION_PCT=0.20
# MAX_DAILY_LOSS_PCT=0.02
